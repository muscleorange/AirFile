<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_info"
        android:textColor="@color/main_info"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/url_adrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/url_addr_init"
        android:layout_below="@+id/main_info"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:background="@drawable/corner_bg"
        android:textColor="@color/url_adrr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_msg"
        android:textColor="@color/tip_msg"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_marginTop="65dp"
        android:maxWidth="270dp"
        android:textSize="16dp"
        android:layout_below="@+id/url_adrr"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/start_stop_button"
        android:textColor="@color/start_stop_btn_txt"
        android:textStyle="bold"
        android:layout_marginBottom="58dp"
        android:background="@drawable/corner_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minWidth="150dp" />
</RelativeLayout>
